@model GitHub.ViewModels.Repositories.RepositoryCreateInputModel
@{
    ViewData["Title"] = "Create Repository";
}

<div class="section">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="header mb-3">
                <h2 class="text-center">Create Repository</h2>
            </div>
            <form method="post">
                <div class="component">
                    <div class="row justify-content-center">
                        <div class="col-lg-6">
                            <div class="form-group text-center">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control is-valid rounded-pill">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-lg-10">
                            <div class="form-group text-center">
                                <label asp-for="Description"></label>
                                <textarea style="height: 200px" asp-for="Description" class="form-control is-valid"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-lg-6">
                            <div class="form-group text-center">
                                <div class="custom-control custom-radio my-2">
                                    <input type="checkbox" asp-for="IsPublic" class="custom-control-input">
                                    <label asp-for="IsPublic" class="custom-control-label"></label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row justify-content-center">
                        <div class="col-lg-6 text-center">
                            <button type="submit" class="btn btn-success btn-pill ">Create</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

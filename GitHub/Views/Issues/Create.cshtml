@model GitHub.ViewModels.Issues.IssuesCreateInputModel
@{
    ViewData["Title"] = "Create Issue";
}

<div class="section">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="header mb-3">
                <h2 class="text-center">Create Issue To @Model.RepositoryName</h2>
            </div>
            <form method="post">
                <div class="component">
                    <div class="row justify-content-center">
                        <div class="col-lg-6">
                            <div class="form-group text-center">
                                <label asp-for="Title"></label>
                                <input asp-for="Title" class="form-control is-valid rounded-pill">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-lg-10">
                            <div class="form-group text-center">
                                <label asp-for="Comment"></label>
                                <textarea style="height: 200px" asp-for="Comment" class="form-control is-valid"></textarea>
                                <span asp-validation-for="Comment" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row justify-content-center">
                        <div class="col-lg-6 text-center">
                            <button type="submit" class="btn btn-success btn-pill ">Create</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>